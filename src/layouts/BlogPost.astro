---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import { PostActions } from "../components/post-actions";

export interface Props {
	content: {
		title: string;
		description: string;
		pubDate?: string;
		tags?: string[];
	};
}

const {
	content: { title, description, pubDate, tags },
} = Astro.props as Props;
---

<html>
	<head>
		<BaseHead title={title} description={description} />
		<style>
			body {
				background: var(--bg-color);
			}
			header {
				height: 200px;
				width: 100%;
				display: flex;
				align-items: center;
				justify-content: center;
				box-sizing: border-box;
				padding: 0 2rem;
				flex-direction: column;
				margin-bottom: 3rem;
			}
			header h1,
			header p {
				margin: 0;
				padding: 0;
				color: white;
			}
			header p {
				margin-top: 0.5rem;
			}
			header p .muted {
				color: rgba(255, 255, 255, 0.5);
			}
			main {
			}
			article {
				background: var(--paper-color);
				border-radius: 32px;
				padding: 2rem;
				box-shadow: 0px 4px 16px var(--shadow-color);
			}
			.bg-accent-container {
				width: 100%;
				position: absolute;
				left: 0;
				top: 0;
				z-index: -1;
				display: flex;
				align-items: center;
				justify-content: center;
				overflow: hidden;
			}
			.bg-accent {
				--size: 1000px;
				z-index: -1;
				width: var(--size);
				min-width: var(--size);
				height: var(--size);
				min-height: var(--size);
				background: linear-gradient(
					80.73deg,
					var(--accent-color) 0%,
					var(--secondary-accent-color) 99.35%
				);
				border-radius: 50%;
				transform: translateY(calc(-50% + 100px));
			}
		</style>
	</head>

	<body>
		<div class="bg-accent-container">
			<div class="bg-accent"></div>
		</div>
		<main>
			<header>
				<h1 class="title">{title}</h1>
				<p>
					{<time>{pubDate}</time>} / {
						tags && tags.length > 0 ? (
							tags.map((t) => <span>#{t} </span>)
						) : (
							<span class="muted">No Tags</span>
						)
					}
				</p>
			</header>
			<article>
				<slot />
			</article>
			<div class="actions"></div>
		</main>
		<PostActions client:load />
		<Footer />
	</body>
</html>
